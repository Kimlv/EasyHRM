@model BeeHRM.ApplicationService.DTOs.LevelDTO

@{
    ViewBag.Title = "LevelEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles{

    <link href="~/Content/moment-datepicker/datepicker.css" rel="stylesheet" />
}
@section scripts{
    <script src="~/Content/datepicker/js/bootstrap-datepicker.js"></script>
    <script type="text/javascript">
        $('.datepicker').datepicker({ 'format': 'yyyy-mm-dd' });
    </script>
}


@section SideBar{
    <div class="wrapper container-fluid" id="wrapper">
        <div id="sidebar-wrapper" class="menusBg menusColor">
            <ul class="sidebar-nav">
                @foreach (var item in ViewBag.SideBar)
                {
                    <li><a href="@item.MduleLink"><i class="@item.ModuleCssClass" aria-hidden="true"></i> @Html.Raw(item.MOduleName)</a></li>
                }
            </ul>
        </div>
    </div>
}
@section PageHeader{
    <div class="small-header">
        <div class="hpanel">
            <div class="panel-body">
                <div id="hbreadcrumb" class="pull-right">
                    <ol class="hbreadcrumb breadcrumb">
                        <li class="active"><span><a href='@Url.Action("Level","Level")' class="btn btn-success"><i class="fa fa-bars" aria-hidden="true"></i> View</a></span></li>
                    </ol>
                </div>
                <h2 class="font-light m-b-xs">
                    Level
                    <small>@Model.LevelName</small>
                </h2>
            </div>
        </div>
    </div>
}
@if (ViewBag.Success != null)
{
    <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <i class="fa fa-check" aria-hidden="true"></i> @ViewBag.Success
    </div>
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="box box-top-border">
        <div class="box-body">
            <div class="row">
                <div class="col-lg-8 ">
                    <div class="box-body">
                        <div class="well box box-primary">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(model => model.LevelName, "Label(*)")
                                @Html.EditorFor(model => model.LevelName, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter label for level", required = "required" } })
                                @Html.ValidationMessageFor(model => model.LevelName, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.LevelOrder, "Level Order")
                                @Html.EditorFor(model => model.LevelOrder, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter order for level" } })
                                @Html.ValidationMessageFor(model => model.LevelOrder, "", new { @class = "text-danger" })

                            </div>
                            <div class="box-footer">
                                <input type="submit" value="Save" class="btn btn-success" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
