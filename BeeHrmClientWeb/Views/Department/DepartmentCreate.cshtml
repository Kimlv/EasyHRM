@model BeeHRM.ApplicationService.DTOs.DepartmentDTO
@{
    ViewBag.Title = "DepartmentCreate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section SideBar{
    <div class="wrapper container-fluid" id="wrapper">
        <div id="sidebar-wrapper" class="menusBg menusColor">
            <ul class="sidebar-nav">
                @foreach (var item in ViewBag.SideBar)
                {
                    <li><a href="@item.MduleLink"><i class="@item.ModuleCssClass" aria-hidden="true"></i> @Html.Raw(item.MOduleName)</a></li>
                }
            </ul>
        </div>
    </div>
}
@section PageHeader{
    <div class="small-header">
        <div class="hpanel">
            <div class="panel-body">
                <div id="hbreadcrumb" class="pull-right">
                    <ol class="hbreadcrumb breadcrumb">
                        <li class="active"><span><a href="/Department" class="btn btn-success"><i class="fa fa-bars" aria-hidden="true"></i> View</a></span></li>
                    </ol>
                </div>
                <h2 class="font-light m-b-xs">
                    Department
                    <small>Add New</small>
                </h2>
            </div>
        </div>
    </div>
}
@if (ViewBag.Success != null)
{
    <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <i class="fa fa-check" aria-hidden="true"></i> @ViewBag.Success
    </div>
}
<div class="box box-top-border">
    <div class="box-body">
        <div class="row">
            <div class="col-lg-8 ">
                <div class="well box box-primary">
                    <form method="POST" action="@Url.Action("DepartmentCreate","Department")" accept-charset="UTF-8">
                        <div class="box-body">
                            <div class="form-group ">
                                <label for="label">Name(*)</label>
                                <input class="form-control" placeholder="Enter department name" required="required" name="DeptName" id="label" type="text">
                            </div>
                            <div class="form-group ">
                                <label for="desc">Code</label>
                                <input class="form-control" placeholder="Enter department code" required="required" name="DeptCode" id="desc" type="text">
                            </div>
                        </div>
                        <div class="box-footer">
                            <input type="submit" value="Save" class="btn btn-primary" name="action:DeptCreate" />
                            <input type="submit" value="Save & Close" class="btn btn-primary" name="action:DeptCreateClose" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>