@model BeeHRM.ApplicationService.DTOs.EmployeeAddressDTO
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section SideBar{
    <div class="wrapper container-fluid" id="wrapper">
        <div id="sidebar-wrapper" class="menusBg menusColor">
            <ul class="sidebar-nav">
                @foreach (var item in ViewBag.SideBar)
                {
                    <li><a href="@item.MduleLink"><i class="@item.ModuleCssClass" aria-hidden="true"></i> @Html.Raw(item.MOduleName)</a></li>
                }
            </ul>
        </div>
    </div>
}
@if (TempData["Danger"] != null)
{
    <div class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <i class="fa fa-check" aria-hidden="true"></i> @TempData["Danger"]
    </div>
}
@section PageHeader{
    <div class="small-header">
        <div class="hpanel">
            <div class="panel-body">
                <div id="hbreadcrumb" class="pull-right">
                    <ol class="hbreadcrumb breadcrumb">
                        <li class="active">
                            <span>
                                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                <a href="/address/Index/@ViewBag.EmployeeDetail.Code" class="btn btn-success"><i class="fa fa-bars"></i> &nbsp; Employee Address List</a>
                            </span><a href="#"></a>
                        </li>
                    </ol>
                </div>
                <h2 class="font-light m-b-xs">
                    Employee Address
                </h2>
            </div>
        </div>
    </div>
}

<div class="box box-top-border">
    <div class="box-body">
        <div class="row">
            @using (Html.BeginForm())
            {
                <div class="box-body">
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Id)
                        @Html.HiddenFor(model => model.EmployeeCode)
                        <div class="row">
                            <div class="col-md-6">
                                @Html.LabelFor(model => model.HouseNumber )
                                @Html.EditorFor(model => model.HouseNumber, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.HouseNumber, "", new { @class = "text-danger" })
                            </div>

                            <div class="col-md-6">
                                @Html.LabelFor(model => model.WardNumber )
                                @Html.EditorFor(model => model.WardNumber, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.WardNumber, "", new { @class = "text-danger" })
                            </div>
                        </div><br/>
                        <div class="row">
                            <div class="col-md-6">
                                @Html.LabelFor(model => model.VDC )
                                @Html.EditorFor(model => model.VDC, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.VDC, "", new { @class = "text-danger" })
                            </div>

                            <div class="col-md-6">
                                @Html.LabelFor(model => model.District )
                                @Html.DropDownListFor(model => model.District, Model.DistrictSelectList, "Please select", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.District, "", new { @class = "text-danger" })
                            </div>
                        </div><br />
                        <div class="row">
                            <div class="col-md-6">
                                @Html.LabelFor(model => model.Zone )
                                @Html.DropDownListFor(model => model.Zone, Model.ZoneSelectList, "Please select", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Zone, "", new { @class = "text-danger" })
                            </div>

                            <div class="col-md-6">
                                @Html.LabelFor(model => model.State )
                                @Html.EditorFor(model => model.State, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.State, "", new { @class = "text-danger" })
                            </div>
                        </div><br />
                        <div class="row">
                            <div class="col-md-6">
                                @Html.LabelFor(model => model.Country )
                                @Html.DropDownListFor(model => model.Country, Model.CountrySelectList, "Please select", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Country, "", new { @class = "text-danger" })
                            </div>

                            <div class="col-md-6">
                                @Html.LabelFor(model => model.LandMark )
                                @Html.EditorFor(model => model.LandMark, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.LandMark, "", new { @class = "text-danger" })
                            </div>
                        </div><br />

                        <div class="row">
                            <div class="col-md-6">
                            @Html.LabelFor(model => model.AddressType )
                                @Html.DropDownListFor(model => model.AddressType, Model.AddressTypeSelectList, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.AddressType, "", new { @class = "text-danger" })
                            </div>
                        </div><br />

                        <div class="row">
                            <div class="col-md-6">
                                <input type="submit" value="Save Address" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
