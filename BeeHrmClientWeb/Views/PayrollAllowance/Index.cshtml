@model IEnumerable<BeeHRM.ApplicationService.DTOs.PayrollAllowanceMasterDTO>

@{
    ViewBag.Title = "PayrollAllowances";
}
@section SideBar{
    <div class="wrapper container-fluid" id="wrapper">
        <div id="sidebar-wrapper" class="menusBg menusColor">
            <ul class="sidebar-nav">
                @foreach (var item in ViewBag.SideBar)
                {
                    <li><a href="@item.MduleLink"><i class="@item.ModuleCssClass" aria-hidden="true"></i> @Html.Raw(item.MOduleName)</a></li>
                }
            </ul>
        </div>
    </div>
}

@section PageHeader{
    <div class="small-header">
        <div class="hpanel">
            <div class="panel-body">
                <div id="hbreadcrumb" class="pull-right">
                    <ol class="hbreadcrumb breadcrumb">
                        <li class="active"><a href="/PayrollAllowance/AllowanceImport" class="btn btn-success"><i class="fa fa-plus"></i> Allowance Import</a></li>

                        <li class="active"><a href="/PayrollAllowance/PayrollAllowancesCreate" class="btn btn-success"><i class="fa fa-plus"></i> Add New</a></li>
                    </ol>
                </div>
                <h2 class="font-light m-b-xs">
                    Payroll allowances
                </h2>
            </div>
        </div>
    </div>
}
<div class="box box-top-border">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AllowanceName)
            </th>
            <th>
                Type
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>


            <th>
                Same For All Employee
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AllowanceName)
                </td>
                <td>
                    @if (item.EarningDeduction == "E")
                { <text> Earning</text>}
                else
                {
                        <text>Deduction</text>
                    }

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>


                <td>
                    @Html.DisplayFor(modelItem => item.SameForAllEmployee)
                </td>
                <td>
                    <a href="/PayrollEmployeeAllowance/AssignEmployees/@item.AllowanceMasterId" class="btn btn-success" target="_blank">Assign For Employee</a>
                    <a href="/PayrollAllowance/PayrollAllowancesEdit/@item.AllowanceMasterId" class="btn btn-success">Edit</a>


                </td>
            </tr>
        }

    </table>
</div>
