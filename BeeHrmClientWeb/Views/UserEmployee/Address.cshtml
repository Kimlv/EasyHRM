@model BeeHRM.ApplicationService.ViewModel.EmployeeEditViewModel
@{
    ViewBag.Title = "Address";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section SideBar{
    <div class="wrapper container-fluid" id="wrapper">
        <div id="sidebar-wrapper" class="menusBg menusColor">
            <ul class="sidebar-nav">
                @foreach (var item in ViewBag.SideBar)
                {
                    <li><a href="@item.MduleLink"><i class="@item.ModuleCssClass" aria-hidden="true"></i> @Html.Raw(item.MOduleName)</a></li>
                }
            </ul>
        </div>
    </div>
}

@section styles{
    

}

@section PageHeader{
    <div class="small-header">
        <div class="hpanel">
            <div class="panel-body">
                <h2 class="font-light m-b-xs">
                    Details of Employee @*- @Model.Name*@
                </h2>
            </div>
        </div>
    </div>
}

<div class="row">
    @Html.Partial("_partialpageUserProfileDetail")
    <div class="col-md-8 col-lg-9">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="pull-right">
                    </div>
                    <i class="fa fa-fw fa-thumb-tack"></i> <strong>Information </strong>
                </div>
                        <div class="panel-body basic">
                            <h3>Address</h3>

                            <ul class="list-group">
                                <li class="list-group-item">
                                    <span class="col-md-4"><strong>Permanent Address</strong> </span>
                                    @if (Model.PermanentAddress == "")
                                    {
                                    <p>Not Found</p>
                                    }
                                    @Model.PermanentAddress
                                </li>
                                <li class="list-group-item">

                                    <span class="col-md-4"><strong>Temporary Adress</strong></span>
                                    @if (Model.TempAddress == "")
                                    {
                                    <p>Not Found</p>
                                    }
                                    @Model.TempAddress
                                </li>
                                <li class="list-group-item">

                                    <span class="col-md-4"><strong>Emergency Adress</strong></span>
                                    @if (Model.EmerAddress == "")
                                    {
                                    <p>Not Found</p>
                                    }
                                    @Model.EmerAddress
                                </li>
                            </ul>

                        </div>

                    </div>
                </div>
            </div>