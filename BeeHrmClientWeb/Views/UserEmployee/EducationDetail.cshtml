                    <span class="col-md-4">Passed Date</span>
                    @*@Convert.ToDateTime(Model.PassedDate).ToString("yyyy/M/dd")*@
                    @{var appointmentdate = !String.IsNullOrEmpty(Model.PassedDate.ToString()) ? BeeHrmClientWeb.Utilities.Date.NepDateConverter.EngToNep(Convert.ToDateTime(Model.PassedDate)).ToString().Replace('/', '-') : null;
                    }
