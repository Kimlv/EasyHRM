                    <span class="col-md-4">University Name</span>
                    @if (Model.UniversityName == null)
                    {
                        <span>Not Defined</span>
                    }
                    @Model.UniversityName
                </li>
                <li class="list-group-item">
                    <span class="col-md-4">Marking System</span>
                    @if (Model.MarkingSystem == null)
                    {
                        <span>Not Defined</span>
                    }
                    @Model.MarkingSystem
                </li>
                <li class="list-group-item">
                    <span class="col-md-4">Obtain Mark</span>
                    @if (Model.ObtainedMark == null)
                    {
                        <span>Not Defined</span>
                    }
                    @Model.ObtainedMark
                </li>
