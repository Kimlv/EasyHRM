                    <span class="col-md-4">Scan Document</span>
                    @if(Model.ScanDocument==null)
                    {
                        <span>Not Defined</span>
                    }
                    <a href="~/img/@Model.ScanDocument" download>@Model.ScanDocument</a>
               </li>
