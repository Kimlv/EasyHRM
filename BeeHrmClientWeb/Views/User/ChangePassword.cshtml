@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section SideBar{
    <div class="wrapper container-fluid" id="wrapper">
        <div id="sidebar-wrapper" class="menusBg menusColor">
            <ul class="sidebar-nav">
                @foreach (var item in ViewBag.SideBar)
                {
                    <li><a href="@item.MduleLink"><i class="@item.ModuleCssClass" aria-hidden="true"></i> @Html.Raw(item.MOduleName)</a></li>
                }
            </ul>
        </div>
    </div>
}



@section PageHeader{
    <div class="small-header">
        <div class="hpanel">
            <div class="panel-body">
                <div id="hbreadcrumb" class="pull-right">

                </div>
                <h2 class="font-light m-b-xs">
                    Change Password
                </h2>
            </div>
        </div>
    </div>
}



<div class="container-fluid">
    <div class="row ">
        <div class="panel panel-default box box-top-border">
            <div class="panel-body">
                <div class="box-body row">
                    @if (ViewBag.sucess != null)
                    {
                        <div class="alert alert-success" id="success">
                            @ViewBag.sucess
                        </div>
                    }
                    <form method="post" action="/user/changepassword">
                        <div class="row">

                            <div class="col-md-10 col-md-offset-1">

                                <div class="form-group row">
                                    <div class="col-md-2">
                                        <label for="Empcode"> EmpCode</label>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="Empcode" class="form-control"> @ViewBag.EmpCode</label>
                                    </div>
                                    <div class="col-md-4">

                                    </div>

                                </div>

                                <div class="form-group row">
                                    <div class="col-md-2">
                                        <label for="Empcode"> Old Password</label>
                                    </div>
                                    <div class="col-md-6">
                                        <input type="password" class="form-control" name="OldPassword" placeholder="Enter Old Password" />
                                    </div>
                                    <div class="col-md-4">
                                        <snap class="text-danger" id="rqsttype"> @Html.ValidationMessage("OldPassword", "", new { @class = "text-danger" })</snap>
                                    </div>

                                </div>
                                <div class="form-group row">
                                    <div class="col-md-2">
                                        <label for="Empcode"> New Password </label>
                                    </div>
                                    <div class="col-md-6">
                                        <input type="password" class="form-control" name="NewPassword" id="oldpassword" placeholder="Enter New Password" />
                                    </div>
                                    <div class="col-md-4">
                                        <snap class="text-danger" id="rqsttype"> @Html.ValidationMessage("NewPassword", "", new { @class = "text-danger" })</snap>
                                    </div>

                                </div>
                                <div class="form-group row">
                                    <div class="col-md-2">
                                        <label for="Empcode"> Confirm Password</label>
                                    </div>
                                    <div class="col-md-6">
                                        <input type="password" class="form-control" name="ConfirmPassword" id="confirmpassword" placeholder="Confirm Password" />
                                    </div>
                                    <div class="col-md-4">
                                        <snap class="text-danger" id="rqsttype"> @Html.ValidationMessage("ConfirmPassword", "", new { @class = "text-danger" })</snap>
                                    </div>

                                </div>
                                <div class="panel-footer col-md-6 col-md-offset-2">
                                    <input type="submit" value="Save" class="btn btn-success" id="validate"> &nbsp;  &nbsp; &nbsp; &nbsp; &nbsp;
                                    <a href="/user/attendancerequest/selfattlist" class="btn btn-success">Cancel </a>

                                </div>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>












@section scripts{

    <script type="text/javascript" src="/content/DataTables/datatables.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.11.4.min.js"></script>
    <script src="~/Scripts/jquery.dialogBox.js"></script>
    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#success').fadeOut(5000);
        });
    </script>
   

}
